<div class="l-container-grid  u-spacing-pt4">
    <div class="c-dates">
        <h3 class="c-dates__title">Gepland overleg</h2>
        <ul class="c-dates__list">
            {% for meeting in collections.futureMeetings %}
                <li class="c-dates__item">
                    <div class="c-meeting">
                        <div class="c-meeting__heading">
                            <time class="c-meeting__date">{{ meeting.date | displayDate }}</time>
                            {% if meeting.data.location %}
                            <p>- {{meeting.data.location}}</p>
                            {% endif %}
                        </div>
                        <div class="c-meeting__content">{{ meeting.templateContent | safe }}</div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="c-dates  u-spacing-mt7">
        <h3 class="c-dates__title">Overleg historie</h2>
        <ul class="c-dates__list">
            {% for meeting in collections.oldMeetings | reverse %}
                <li class="c-dates__item">
                    <details class="c-meeting  has-toggle">
                        <summary class="c-meeting__heading">
                            <time class="c-meeting__date">{{ meeting.date | displayDate }}</time>
                            {% if meeting.data.location %}
                            <p>- {{meeting.data.location}}</p>
                            {% endif %}
                        </summary>
                        <div class="c-meeting__content">{{ meeting.templateContent | safe }}</div>
                    </details>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>